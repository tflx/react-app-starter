{
  "name": "react-app-starter",
  "version": "1.0.0",
  "description": "Boilerplate and tooling for JavaScript application development with React",
  "repository": "tflx/react-app-starter",
  "author": "Torben Larsen torben@torbenlarsen.com",
  "contributors": [],
  "license": "MIT",
  "keywords": [
    "react",
    "reactjs",
    "webpack",
    "babel",
    "es6",
    "es2015",
    "jsx",
    "redux",
    "browsersync",
    "browser-sync",
    "template",
    "templates",
    "boilerplate",
    "scarrold",
    "scaffolding"
  ],
  "engines": {
    "node": ">=6",
    "npm": ">=3.8"
  },
  "files": [
    "scripts",
    "templates",
    "run.js",
    "webpack.config.js"
  ],
  "dependencies": {
    "airbnb-js-shims": "^1.0.1",
    "classnames": "^2.2.5",
    "history": "^3.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "redux-saga": "^0.14.3",
    "sanitize.css": "^4.1.0",
    "whatwg-fetch": "^2.0.2"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.4.0",
    "autoprefixer": "^6.4.0",
    "babel-core": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.11.6",
    "babel-runtime": "^6.11.6",
    "browser-sync": "^2.14.0",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "connect-history-api-fallback": "^1.2.0",
    "cpy": "^4.0.1",
    "css-loader": "^0.23.1",
    "del": "^2.2.1",
    "ejs": "^2.5.1",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^10.0.0",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^6.0.0",
    "file-loader": "^0.9.0",
    "front-matter": "^2.1.0",
    "highlight.js": "^9.5.0",
    "json-loader": "^0.5.4",
    "markdown-it": "^7.0.0",
    "path-to-regexp": "^1.5.3",
    "pixrem": "^3.0.1",
    "pleeease-filters": "^3.0.0",
    "postcss": "^5.1.1",
    "postcss-calc": "^5.3.0",
    "postcss-color-function": "^2.0.1",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-custom-selectors": "^3.0.0",
    "postcss-flexbugs-fixes": "^2.0.0",
    "postcss-import": "^8.1.2",
    "postcss-loader": "^0.9.1",
    "postcss-media-minmax": "^2.1.2",
    "postcss-nesting": "^2.3.1",
    "postcss-selector-matches": "^2.0.1",
    "postcss-selector-not": "^2.0.0",
    "react-app-tools": "^1.1.2",
    "react-hot-loader": "^3.0.0-beta.2",
    "style-loader": "^0.13.1",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^12.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.12.2"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-1"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint-config-airbnb",
    "rules": {
      "class-methods-use-this": "off",
      "comma-dangle": ["warn", "always-multiline"],
      "eol-last": "off",
      "import/extensions": "off",
      "import/no-named-as-default": "off",
      "no-plusplus": "off",
      "no-return-assign": "off",
      "no-trailing-spaces": "off",
      "no-use-before-define": ["error", { "functions": false, "classes": true }],
      "no-underscore-dangle": ["error", { "allow": ["__isCMS", "__html"] }],
      "max-len": "off",
      "object-curly-spacing": "off",
      "spaced-comment": ["error", "always"],


      "react/forbid-prop-types": "off",
      "react/jsx-filename-extension": "off",
      "react/jsx-handler-names": ["error", {
        "eventHandlerPrefix": "handle",
        "eventHandlerPropPrefix": "on"
      }],
      "react/jsx-indent-props": "off",
      "react/jsx-no-undef": "error",
      "react/no-danger": "off",
      "react/no-direct-mutation-state": "error",
      "react/no-unused-prop-types": "off",
      "react/require-extension": "off",
      "react/prefer-stateless-function": "off"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single"
    }
  },
  "scripts": {
    "lint": "eslint src test",
    "test": "mocha --compilers js:babel-register",
    "test:watch": "mocha --compilers js:babel-register --reporter min --watch",
    "build": "react-app build",
    "start": "react-app run"
  }
}
